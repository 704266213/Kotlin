<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kotlin.demo.activity.SettingActivity">


    <TextView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="设计"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:clickable="true"
        android:drawableLeft="@drawable/back_btn_white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:onClick="onBack"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="返回"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@drawable/setting_line"
        android:dividerPadding="16dp"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back">

        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:clickable="true"
            android:drawableLeft="@drawable/app_icon"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/setting_arraw"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="关于"
            android:textColor="#cdcdcd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:clickable="true"
            android:drawableLeft="@drawable/app_icon"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/setting_arraw"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="常见问题"
            android:textColor="#cdcdcd"
            android:textSize="16sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
